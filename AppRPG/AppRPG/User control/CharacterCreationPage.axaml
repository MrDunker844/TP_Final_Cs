<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AppRPG.User_control.CharacterCreationPage">
    <Grid RowDefinitions="2*,15*" ColumnDefinitions="*" >
        <Grid.Background>
            <ImageBrush Source="../TheAssets/image/BackgroundParchment.png"
                        Stretch="UniformToFill"
                        Opacity="0.8"/>
        </Grid.Background>

         <Grid Grid.Row="0">
             
             <TextBlock FontWeight="Bold" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center">CREATION DU HEROS</TextBlock>
         </Grid>
        <Grid ColumnDefinitions="1*,5*,5*,5*,1*"  RowDefinitions="14*,1*" Grid.Row="1">
            <Grid RowDefinitions="5*,2*,1*,10*,10*" Grid.Column="1"  Margin="10,0">
                <Grid.Background>
                    <ImageBrush Source="../TheAssets/image/BackgroundFire.png"
                                Stretch="UniformToFill"
                                Opacity="0.7"/>
                </Grid.Background>
                
                <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">Nom par défaut</TextBlock>
                
                <TextBox Margin="0,10,0,10" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">ss</TextBox>
                
                <Grid Grid.Row="3" RowDefinitions="2*,1*,1*,1*,1*,1*,1*">
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom">Race</TextBlock>
                    <Border>
                        
                    </Border>
                    <Button Classes="Choix" Grid.Row="1">Humain</Button>
                    <Button Classes="Choix" Grid.Row="2">Elfe</Button>
                    <Button Classes="Choix" Grid.Row="3">Mage</Button>
                    <Button Classes="Choix" Grid.Row="4">fée</Button>
                    <Button Classes="Choix" Grid.Row="5"></Button>
                    <Button Classes="Choix" Grid.Row="6"></Button>
                </Grid>
                
                <Grid Grid.Row="4" RowDefinitions="2*,1*,1*,1*,1*,1*,1*">
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom">Classe</TextBlock>
                    <Border>
                        
                    </Border>
                    <Button Classes="Choix" Grid.Row="1">Humain</Button>
                    <Button Classes="Choix" Grid.Row="2">voleur</Button>
                    <Button Classes="Choix" Grid.Row="3">Mage</Button>
                    <Button Classes="Choix" Grid.Row="4"></Button>
                    <Button Classes="Choix" Grid.Row="5"></Button>
                    <Button Classes="Choix" Grid.Row="6"></Button>
                </Grid>
                
            </Grid>
            
            <Grid Grid.Column="2" Margin="10,0">
                
                <Grid.Background>
                    <ImageBrush Source="../TheAssets/image/BackgroundGrey.jpg"
                                Stretch="UniformToFill"
                                Opacity="0.7"/>
                    
                </Grid.Background>
                
                <Border>
                    <Grid ></Grid>
                </Border>
                
            </Grid>
            
            <Grid Grid.Column="3" Margin="10,0">
                
                <Grid.Background>
                    <ImageBrush Source="../TheAssets/image/BackgroundFire.png"
                                Stretch="UniformToFill"
                                Opacity="0.7"/>
                    
                </Grid.Background>
                
                <Border>
                    <Grid RowDefinitions="2*,1*,1*,1*,1*,1*,1*,3*,1*,1*,1*">
                        <TextBlock Classes="middle h2" FontSize="16" Grid.Row="0">Atribut</TextBlock>
                        <TextBlock Classes="leftpading boldBodyText" Grid.Row="1">Force</TextBlock>
                        <TextBlock Classes="leftpading boldBodyText" Grid.Row="2">Agilité</TextBlock>
                        <TextBlock Classes="leftpading boldBodyText" Grid.Row="3">PV</TextBlock>
                        <TextBlock Classes="leftpading boldBodyText" Grid.Row="4"></TextBlock>
                        
                        
                        
                        
                    </Grid>
                </Border>
                
            </Grid>
        </Grid>
    </Grid>
    <UserControl.Styles>
        
        <Style Selector="Button.Choix">
            <Setter Property="Background" Value="DarkSlateGray"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Margin" Value="0,1"></Setter>
        </Style>
        <Style Selector="TextBlock.middle">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style Selector="TextBlock.leftpading">
            <Setter Property="Padding" Value="20,0,0,0"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        </Style>
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
        </Style>
        <Style Selector="TextBlock.h3">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
        </Style>
        <Style Selector="TextBlock.boldBodyText">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
        </Style>
        
    </UserControl.Styles>
    
    
</UserControl>

